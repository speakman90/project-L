{% extends 'base.html.twig' %}

{% block title %}Espace administrateur{% endblock %}

{% block body %}
<form class="h-screen flex flex-col items-center justify-center" method="post">
    {% if error %}
        <div class="text-red-500">Informations de connexion erron√©e</div>
    {% endif %}

    <label for="input-group-1" class="{% if error %} block mb-2 text-sm font-medium text-red-500 {% else %} block mb-2 text-sm font-medium text-gray-900 text-white {% endif %}">Votre email</label>
    <div class="relative mb-6 w-1/6">
        <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
            <svg class="w-4 h-4 {% if error %} text-red-500 {% else %} text-gray-400 {% endif %}" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z"/>
                <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z"/>
            </svg>
        </div>
        <input type="text" id="input-group-1" class="{% if error %} border placeholder-red-700 text-sm rounded-lg w-full ps-10 p-2.5 focus:ring-red-500 bg-gray-700 focus:border-red-500 block w-full p-2.5 text-red-500 border-red-500 {% else %} border text-sm rounded-lg block w-full ps-10 p-2.5 bg-gray-700 border-gray-600 text-white focus:ring-blue-500 focus:border-blue-500 {% endif %}" required>
    </div>
    <label for="password" class="{% if error %} block mb-2 text-sm font-medium text-red-500 {% else %} block mb-2 text-sm font-medium text-gray-900 text-white {% endif %}">Mot de passe</label>
    <div class="mb-6 w-1/6">
        <input type="password" id="password" class="{% if error %} border placeholder-red-700 text-sm rounded-lg focus:ring-red-500 bg-gray-700 focus:border-red-500 block w-full p-2.5 text-red-500 border-red-500 {% else %} border text-sm rounded-lg block w-full bg-gray-700 border-gray-600 text-white focus:ring-blue-500 focus:border-blue-500 {% endif %}" required />
    </div> 

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="text-white focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
